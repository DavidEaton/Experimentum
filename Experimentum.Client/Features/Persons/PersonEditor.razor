<h3 class="text-secondary">Add/Edit Person</h3>
<EditForm Model="@person" OnSubmit="@SubmitForm" class="mb-3">
    <FluentValidationValidator />
    @* //////////////////////////////////////////////////////////////////////////////////////////////////////////////////// *@
    @* ////////////////////                   REPLACE WITH COMPONENT                           //////////////////////////// *@
    @* //////////////////////////////////////////////////////////////////////////////////////////////////////////////////// *@
    <div class="mb-3">
        <label for="lastName" class="form-label small-gray-label">Last Name</label>
        <InputText id="lastName" class="form-control" @bind-Value="@person.Name.LastName" @onblur="@ValidateForm" />
        <ValidationMessage For="@(() => person.Name.LastName)" />
    </div>

    <div class="mb-3">
        <label for="firstName" class="form-label small-gray-label">First Name</label>
        <InputText id="firstName" class="form-control" @bind-Value="@person.Name.FirstName" @onblur="@ValidateForm" />
        <ValidationMessage For="@(() => person.Name.FirstName)" />
    </div>

    <div class="mb-3">
        <label for="middleName" class="form-label small-gray-label">Middle Name</label>
        <InputText id="middleName" class="form-control" @bind-Value="@person.Name.MiddleName" @onblur="@ValidateForm" />
        <ValidationMessage For="@(() => person.Name.MiddleName)" />
    </div>

    @* ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////// *@
    @* ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////// *@
    @* ///////////////////////////////////////////////////////////////////////////////////////////////////////////////////// *@

    <div class="mb-3">
        <label for="gender" class="form-label small-gray-label">Gender</label>
        <InputSelect id="gender" class="form-control" @bind-Value="@person.Gender" @onblur="@ValidateForm">
            <option value="9">"invalid"</option>
            @foreach (var gender in Enum.GetValues<Gender>())
            {
                <option value="@gender">@gender</option>
            }
        </InputSelect>
        <ValidationMessage For="@(() => person.Gender)" />
    </div>

    <div class="mb-3">
        <label for="birthday" class="form-label small-gray-label">Birthday</label>
        <InputDate id="birthday" class="form-control" @bind-Value="@person.Birthday" @onblur="@ValidateForm" />
        <ValidationMessage For=@( () => person.Birthday ) />

    </div>

    <div class="mb-3">
        <label for="favoriteColor" class="form-label small-gray-label">Favorite Color</label>
        <InputText id="favoriteColor" class="form-control" @bind-Value="@person.FavoriteColor" @onblur="@ValidateForm" />
        <ValidationMessage For="@( () => person.FavoriteColor )" />

    </div>

    <div class="mb-3">
        <label for="email" class="form-label small-gray-label">Email</label>
        <InputText id="email" class="form-control" @bind-Value="@person.Email.Address" @onblur="@ValidateForm" />
        <ValidationMessage For="@( () => person.Email.Address )" />
     </div>

    <div class="d-flex align-items-start justify-content-start">
        <button type="submit" class="btn btn-primary">Submit</button>
        <ValidationSummary />
    </div>
</EditForm>
